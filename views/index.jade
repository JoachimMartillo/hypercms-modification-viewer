extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2
                p Welcome to MySQL Database Login Form
                // register form
                form(method='POST', action='/hostname')
                    div.form-group
                        label(for='servername') Database Server (#{db_server_ph}):
                        input#servername.form-control(type='text', name='servername')
                    div.form-group
                        label(for='login') Database Login (#{db_login_ph}):
                        input#login.form-control(type='text', name='login')
                    div.form-group
                        label(for='database') Database (#{db_database_ph}):
                        input#database.form-control(type='text', name='database')
                    div.form-group
                        label(for='password') DB Password (#{db_password_ph}):
                        input#password.form-control(type='password', placeholder=password, name='password')
                    div.form-group
                        label(for='confirmPassword') DB Confirm (#{db_password_ph}):
                        input#confirmPassword.form-control(type='password', placeholder=password, name='confirmPassword')
                    button.btn.btn-primary(type='submit', name='button_login', value='login') login
