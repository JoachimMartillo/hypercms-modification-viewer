extends layout

block content
    .main.container
        .row
            .col-md-6.col-md-offset-3
                h1.display-4.m-b-2
                p Welcome to MySQL Database Login Form
                // register form
                form(method='POST' action='/hostname')
                    data_server_ph = dsph
                    db_login_ph = dblph
                    db_database_ph = dbdbph
                    db_password_ph = dbpph
                    div.form-group
                        label(for='servername')      Database Server:
                        input#servername.form-control(type='text', placeholder=data_server_ph, name='servername')
                    div.form-group
                        label(for='login')           Database Login:
                        input#login.form-control(type='text', placeholder=db_login_ph, name='login')
                    div.form-group
                        label(for='datatable')           Database:
                        input#datatable.form-control(type='text', placeholder=db_database_ph, name='datatable')
                    div.form-group
                        label(for='password')        DB Password    :
                        input#password.form-control(type='password', placeholder=db_password_ph, name='password')
                    div.form-group
                        label(for='confirmPassword') DB Confirm     :
                        input#confirmPassword.form-control(type='password', placeholder=db_password_ph, name='confirmPassword')
                    button.btn.btn-primary(type='submit', name='button_login', value='login') login
